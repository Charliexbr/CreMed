.l-fab:active, .l-fab--active {
  opacity: 0.9;
}
.l-fab-wrapper {
  position: fixed;
  width: calc(100% - var(--l-fab-initial-gap, 24px) - var(--l-fab-initial-gap, 24px));
  height: calc(100% - var(--l-fab-initial-gap, 24px) - var(--l-fab-initial-gap, 24px));
